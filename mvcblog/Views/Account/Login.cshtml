@model LoginViewModel

<div class='content-section'>
    <form method='Post' asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]">
        <fieldset class='form-group'>
            <legend class='border-bottom mb-4'>Login</legend>
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class='form-group'>
                <label class="form-control-label" asp-for="Email"></label>
                <input class="form-control form-control-lg" asp-for="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class='form-group'>
                <label class="form-control-label" asp-for="Password"></label>
                <input class="form-control form-control-lg" asp-for="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            @* <div class='form-group'> *@
            @*     <label class="form-control-label"> *@
            @*         <input class="form-control form-control-lg" asp-for="RememberMe">Remember me *@
            @*     </label> *@
            @* </div> *@
            <div class="custom-checkbox">
                <label>
                    <input asp-for="RememberMe" />
                    Remember me
                </label>
            </div>


        </fieldset>
        @* <div class='form-group'> *@
        @*     <input class="btn btn-outline-info" type="submit"> *@
        @* </div> *@
        <button class="btn btn-success form-control" type="submit">
            Login
        </button>
    </form>
</div>
<div class='border-top pt-3'>
    <small class='text-muted'>
        Dont Have an Account? <a class='ml-2' asp-controller="Account" asp-action="Register">Sign up </a>
    </small>
</div>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}